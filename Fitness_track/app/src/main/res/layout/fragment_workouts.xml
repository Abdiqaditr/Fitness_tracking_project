<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Card for Workout Summary -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvWorkoutSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Workout Summary"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvWorkoutDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No workouts yet" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button to Start New Workout -->
    <Button
        android:id="@+id/btnStartWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Workout" />

</LinearLayout>
